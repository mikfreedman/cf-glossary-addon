{
  "short_name": "pivotal-glossary",
  "name": "Pivotal Glossary",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "This extension will lookup entries in pivotal-glossary.pivotalapps.io",
  "homepage_url": "http://github.com/mikfreedman/pivotal-glossary-addon",
  "icons": {
    "16": "icons/pivotal-glossary-16.png",
    "48": "icons/pivotal-glossary-48.png",
    "128": "icons/pivotal-glossary-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/pivotalGlossary.js",
      "src/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icons/pivotal-glossary-128.png",
    "default_title": "lookup entries"
  },
  "permissions": [
    "contextMenus"
  ]
}
